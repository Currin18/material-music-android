<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/albumDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.AlbumDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detailLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:padding="16dp"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:id="@+id/albumArt"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_album_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
                android:id="@+id/albumArtistIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_person_white_24dp"
                app:layout_constraintTop_toTopOf="@id/albumArt"
                app:layout_constraintStart_toEndOf="@id/albumArt"/>
        <TextView
                android:id="@+id/albumArtistText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/albumArtistIcon"
                app:layout_constraintBottom_toBottomOf="@id/albumArtistIcon"
                app:layout_constraintStart_toEndOf="@id/albumArtistIcon"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
                android:id="@+id/albumSongsIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_audiotrack_white_24dp"
                app:layout_constraintTop_toBottomOf="@id/albumArtistIcon"
                app:layout_constraintStart_toEndOf="@id/albumArt"/>
        <TextView
                android:id="@+id/albumSongsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/albumSongsIcon"
                app:layout_constraintBottom_toBottomOf="@id/albumSongsIcon"
                app:layout_constraintStart_toEndOf="@id/albumSongsIcon"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
                android:id="@+id/albumTimeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_access_time_white_24dp"
                app:layout_constraintTop_toBottomOf="@id/albumSongsIcon"
                app:layout_constraintStart_toEndOf="@id/albumArt"/>
        <TextView
                android:id="@+id/albumTimeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/albumTimeIcon"
                app:layout_constraintBottom_toBottomOf="@id/albumTimeIcon"
                app:layout_constraintStart_toEndOf="@id/albumTimeIcon"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
                android:id="@+id/albumYearIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_date_range_white_24dp"
                app:layout_constraintTop_toBottomOf="@id/albumTimeIcon"
                app:layout_constraintStart_toEndOf="@id/albumArt"/>
        <TextView
                android:id="@+id/albumYearText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/albumYearIcon"
                app:layout_constraintBottom_toBottomOf="@id/albumYearIcon"
                app:layout_constraintStart_toEndOf="@id/albumYearIcon"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listSongs"
            android:name=".ui.library.TabSongsFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:clipToPadding="false"
            android:paddingBottom="52dp"
            app:layout_constraintTop_toBottomOf="@id/detailLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="LinearLayoutManager"
            tools:context=".ui.fragments.songs.TabSongsFragment"
            tools:listitem="@layout/item_list_song"/>

</androidx.constraintlayout.widget.ConstraintLayout>
